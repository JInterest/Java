    <servlet>
        <servlet-name>Qu_SendTpServlet</servlet-name>
        <servlet-class>com.test.controller.Qu_SendTpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Qu_ExamServlet</servlet-name>
        <servlet-class>com.test.controller.Qu_ExamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Qu_upDateServlet</servlet-name>
        <servlet-class>com.test.controller.Qu_upDateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkUNameServlet</servlet-name>
        <servlet-class>com.test.controller.checkUNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkUNameServlet</servlet-name>
        <url-pattern>/checkUName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_upDateServlet</servlet-name>
        <url-pattern>/qu_update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_ExamServlet</servlet-name>
        <url-pattern>/qu_exam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_SendTpServlet</servlet-name>
        <url-pattern>/qu_sendTp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_FindByIDServlet</servlet-name>
        <url-pattern>/qu_findById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_DelServlet</servlet-name>
        <url-pattern>/qu_del</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Qu_FindAllServlet</servlet-name>
        <url-pattern>/qu_findAll</url-pattern>
    </servlet-mapping>
