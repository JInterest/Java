    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.test.controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userUpdateServlet</servlet-name>
        <servlet-class>com.test.controller.userUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userFind2Servlet</servlet-name>
        <servlet-class>com.test.controller.userFind2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>com.test.controller.userLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userDelServlet</servlet-name>
        <servlet-class>com.test.controller.userDelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Qu_AddServlet</servlet-name>
        <servlet-class>com.test.controller.Qu_AddServlet</servlet-class>
    </servlet>
    <servlet>
